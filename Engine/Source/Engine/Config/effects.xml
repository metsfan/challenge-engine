<?xml version="1.0" encoding="utf-8"?>
<Effects>
  <Effect name="Model">
    <Technique name="Static">
      <Pass>
        <ShaderProgram name="model_static" />
        <Global name="gWVPMatrix" semantic="WORLDVIEWPROJ_MATRIX" shader="vertex" />
        <Global name="gWorldMatrix" semantic="WORLD_MATRIX" shader="vertex" />
        <Global name="gTexture" semantic="DIFFUSE_TEXTURE" shader="pixel" />
      </Pass>
    </Technique>
    <Technique name="BoneAnimation">
      <Pass>
        <ShaderProgram name="model_bone_animation" />
        <Global name="gWVPMatrix" semantic="WORLDVIEWPROJ_MATRIX" shader="vertex" />
        <Global name="gWorldMatrix" semantic="WORLD_MATRIX" shader="vertex" />
        <Global name="gBoneMatrices" semantic="BONE_MATRICES" shader="vertex" />
        <Global name="gTexture" semantic="DIFFUSE_TEXTURE" shader="pixel" />
      </Pass>
    </Technique>
  </Effect>
  <Effect name="Skybox">
    <Technique name="Skybox">
      <Pass>
        <ShaderProgram name="skybox" />
        <Global name="gWVPMatrix" semantic="WORLDVIEWPROJ_MATRIX" shader="vertex" />
        <Global name="gSkyboxTexture" semantic="SKYBOX_TEXTURE" shader="pixel" />
      </Pass>
    </Technique>
  </Effect>
  <Effect name="Sprite">
    <Technique name="SpriteColor">
      <Pass>
        <ShaderProgram name="sprite_color" />
        <Global name="gWVPMatrix" semantic="WORLDVIEWPROJ_MATRIX" shader="vertex" />
        <Global name="gFrame" semantic="FRAME" shader="vertex" />
        <Global name="gTexFrame" semantic="TEXTURE_FRAME" shader="vertex" />
        <Global name="gColor" semantic="BACKGROUND_COLOR" shader="pixel" />
      </Pass>
    </Technique>
    <Technique name="SpriteTexture">
      <Pass>
        <ShaderProgram name="sprite_texture" />
        <Global name="gWVPMatrix" semantic="WORLDVIEWPROJ_MATRIX" shader="vertex" />
        <Global name="gFrame" semantic="FRAME" shader="vertex" />
        <Global name="gTexFrame" semantic="TEXTURE_FRAME" shader="vertex" />
        <Global name="gColor" semantic="BACKGROUND_COLOR" shader="pixel" />
        <Global name="gBackgroundImage" semantic="BACKGROUND_IMAGE" shader="pixel" />
      </Pass>
    </Technique>
  </Effect>
  <Effect name="HeightMap">
    <Technique name="HeightMap">
      <Pass>
        <ShaderProgram name="heightmap" />
        <Global name="gWVPMatrix" semantic="WORLDVIEWPROJ_MATRIX" shader="vertex" />
        <Global name="gHeightMapTexture" semantic="HEIGHTMAP_TEXTURE" shader="vertex" />
        <Global name="gSize" semantic="HEIGHTMAP_SIZE" shader="vertex" />
        <Global name="gTexture" semantic="DIFFUSE_TEXTURE" shader="pixel" />
      </Pass> 
    </Technique>
  </Effect>
</Effects>
