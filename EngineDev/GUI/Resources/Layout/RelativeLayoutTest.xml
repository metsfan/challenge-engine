<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout width="match_parent"
                height="match_parent"
                background_color="00FF00"
                padding="10,10,10,10">
  <View width="75"
        height="100"
        id="view1"
        background_color="FF00FF"
        />
  <View width="match_parent"
        height="50"
        id="view2"
        right_of="view1"
        margin_left="10"
        background_color="FFFF00"
        />
  <View width="match_parent"
        height="100"
        id="view3"
        below="view1"
        margin_top="5"
        background_color="0000FF"
        />

  <Button width="wrap_content"
          height="wrap_content"
          id="button1"
          below="view3"
          margin_top="10"
          text="Click Me"
          background_color="CC0000"
          padding="5,5,5,5"
          />
</RelativeLayout>